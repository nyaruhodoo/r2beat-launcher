{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/types.ts",
    "src/config.ts",
    "src/ipc/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "paths": {
      "@types": ["./src/types.ts"],
      "@config": ["./src/config.ts"]
    }
  }
}
